doctype html
html
	head
		title
		meta(name="viewport",content="width=device-width, initial-scale=1")
		link(type="text/css",rel='stylesheet',href='/stylesheets/style.css')
		link(type="text/css",rel='stylesheet',href='/stylesheets/bootstrap.min.css')
		link(type="text/css",rel='stylesheet',href='/stylesheets/bootstrap-theme.min.css')
		script(src="http://ajax.googleapis.com/ajax/libs/angularjs/1.3.14/angular.js")
		script(src="http://ajax.googleapis.com/ajax/libs/angularjs/1.3.14/angular-route.js")
		script(src="/javascripts/canvasjs.min.js")
		base(href="/")
	body(ng-app='myApp')
		header.lbs-nav(ng-controller="HeaderCtrl")
			div.container
				div.navbar-header
					button.navbar-toggle.collapsed(type="button",data-toggle="collapse",data-target=".bs-navbar-collapse")
						span.sr-only
						span.icon-bar
						span.icon-bar
						span.icon-bar
					a.navbar-brand(ng-href="/") Beacon自動點名系統
				nav.navbar-collapse.bs-navbar-collapse.collapse(aria-expanded="false")
					ul.nav.navbar-nav
						li(data-toggle="collapse")
							a(ng-href="/question") Question
						li(data-toggle="collapse")
							a(ng-href="/course") Course Manage
						li(data-toggle="collapse")
							a(ng-href="/stdlist") Student Manage
						li(data-toggle="collapse")
							a(ng-href="/test") Test
					ul.nav.navbar-nav.navbar-right
						li(data-toggle="collapse")
							a(ng-href="/login") Login
						li(data-toggle="collapse")
							a(ng-click="Exit()") Exit
		block content
		include footer